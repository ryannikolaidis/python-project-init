name: CI

on:
  push:
    branches:
      - main
      - master
  pull_request:

env:
  PYTHONUNBUFFERED: "1"

jobs:
  lint:
    name: Lint scripts
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Install lint tools
        run: |
          sudo apt-get update
          sudo apt-get install -y shellcheck shfmt

      - name: Run lint
        run: make lint
